# OLED display #################################################################
OLED_ENABLE = yes                               # Enable OLED displays
OLED_DRIVER = SSD1306                           # Specify OLED driver

# Encoders #####################################################################
ENCODER_ENABLE = yes                            # Enable encoders

# Trackball ####################################################################
POINTING_DEVICE_ENABLE = yes                    # Enable pointing device
POINTING_DEVICE_DRIVER = pimoroni_trackball     # Specify pointing device driver

# Misc #########################################################################
RGBLIGHT_ENABLE = no                            # Disable RGB underglow
MOUSEKEY_ENABLE = yes                           # Enable mouse keys
